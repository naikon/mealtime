#content

  .textbox
    %h2
      = @title
    %p 
      Displays the final voting from all users sorted by location for today (#{@today})
  </br>

  .locationbox

 
    %table#resulttable.table.table-condensed.tablesorter
      %thead
        %tr
          -# = %th
            -# = .content #
          %th.name
            Name
          %th.count
            Sum
          %th.count
            Pros
          %th.count
            NoGos
          - @users.each do |user|
            %th.name
              #{user.username} 
      %tbody
        - cnt = 1
        - @ballots.each do |ballot|
          - start = 0
          %tr
            -# = %td
              -# = #{cnt}
            %td
              #{ballot.name}
            %td
              #{ballot.sum}
            - cnt += 1
            - if ballot.pros >= 1
              %td 
                %span.label.label-success
                  #{ballot.pros}
            - else
              %td
                #{ballot.pros}
            - if ballot.nogos >= 1
              %td
                %span.label.label-important
                  #{ballot.nogos}
            - else
              %td
                #{ballot.nogos}
            - @users.each do |user| 
              %td
                #{@results[start][cnt-2]}
                -start += 1
